.preview {
  width: 100%;
  height: 100vh;
  position: relative;
}
.preview .popHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.preview .popHeader .title {
  color: #676767;
  font-size: 26rpx;
}
.preview .popHeader .close {
  padding: 6rpx;
}
.preview swiper {
  width: 100%;
  height: 100%;
}
.preview swiper image {
  width: 100%;
  height: 100%;
}
.preview .mask > view {
  position: absolute;
  left: 0;
  margin: auto;
  color: #eee;
  right: 0;
  width: -webkit-fit-content;
  width: fit-content;
}
.preview .mask .goBack {
  width: 38px;
  height: 38px;
  background: rgba(0, 0, 0, 0.5);
  left: 30rpx;
  margin-left: 0%;
  border-radius: 100px;
  top: 0%;
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}
.preview .mask .count {
  top: 10vh;
  /* 太长太短都不行，内容自适应就行 */
  background: rgba(0, 0, 0, 0.3);
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 8rpx 28rpx;
  /* 模糊效果 */
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
}
.preview .mask .time {
  font-size: 140rpx;
  /* calc()计算的时候符号要有空格 */
  top: calc(10vh + 80rpx);
  font-weight: 100;
  line-height: 1em;
  /* 避免白色背景混淆时间 */
  text-shadow: 0 4rpx rgba(0, 0, 0, 0.3);
}
.preview .mask .date {
  font-size: 34rpx;
  /* calc()计算的时候符号要有空格 */
  top: calc(10vh + 210rpx);
  text-shadow: 0 4rpx rgba(0, 0, 0, 0.3);
}
.preview .mask .footer {
  background: rgba(255, 255, 255, 0.8);
  bottom: 10vh;
  display: flex;
  width: 65vw;
  height: 120rpx;
  border-radius: 120rpx;
  color: #000;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 4rpx rgba(0, 0, 0, 0.3);
  -webkit-backdrop-filter: blur(20rpx);
          backdrop-filter: blur(20rpx);
}
.preview .mask .footer .box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 2rpx 12rpx;
}
.preview .mask .footer .box .text {
  font-size: 26rpx;
  color: #676767;
}
.preview .infoPopup {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
}
.preview .infoPopup scroll-view {
  max-height: 60vh;
}
.preview .infoPopup scroll-view .content .row {
  display: flex;
  padding: 16rpx;
  font-size: 32rpx;
  line-height: 1.7em;
}
.preview .infoPopup scroll-view .content .row .label {
  color: #a7a7a7;
  width: 140rpx;
  text-align: right;
  font-size: 30rpx;
}
.preview .infoPopup scroll-view .content .row .value {
  flex: 1;
  width: 0;
}
.preview .infoPopup scroll-view .content .row .rateBox {
  display: flex;
  align-items: center;
}
.preview .infoPopup scroll-view .content .row .rateBox .score {
  font-size: 26rpx;
  color: #676767;
  padding-left: 20rpx;
}
.preview .infoPopup scroll-view .content .row .tabs {
  display: flex;
  flex-wrap: wrap;
}
.preview .infoPopup scroll-view .content .row .tabs .tab {
  border: 1px solid #28b389;
  color: #28b389;
  font-size: 22rpx;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  line-height: 29rpx;
  margin: 0 10rpx 10rpx 0;
}
.preview .infoPopup scroll-view .content .row .catergory {
  color: #28b389;
}
.preview .ratePopup {
  background: #fff;
  padding: 30rpx;
  width: 70vw;
  border-radius: 30rpx;
}
.preview .ratePopup .content {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.preview .ratePopup .content .text {
  width: 100rpx;
  text-align: right;
  padding-left: 10rpx;
  color: #ffca3e;
}
.preview .ratePopup .footer {
  display: flex;
  justify-content: space-around;
}
.preview .ratePopup .footer button {
  flex: 1;
}
.preview .ratePopup .footer button:first-child {
  margin-right: 60rpx;
}